            <VBox.margin>
                <Insets left="50.0" right="50.0" top="200.0" bottom="200.0"/>
            </VBox.margin>
        </JFXTextArea>
    </VBox>
    <GridPane>
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
