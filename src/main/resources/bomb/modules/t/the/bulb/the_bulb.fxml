                                toggleGroup="$colorGroup"/>
                <JFXRadioButton id="pink-radio-button" onAction="#enableSubmitButton" text="Pink"
                                toggleGroup="$colorGroup">
                    <VBox.margin>
                        <Insets top="20.0"/>
                    </VBox.margin>
                </JFXRadioButton>
                <JFXRadioButton id="default-radio-button" onAction="#enableSubmitButton" text="White"
